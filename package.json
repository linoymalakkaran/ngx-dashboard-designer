{
  "name": "ngx-dashboard-designer",
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "husky": "husky",
    "commitlint": "commitlint",
    "lint-staged": "lint-staged",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "watch": "ng build --watch --configuration development",
    "deploy": "ng deploy --base-href=/dashboard-designer/  --no-silent",
    "postinstall": "husky install",
    "build:schematics": "tsc -p projects/dashboard-designer/tsconfig.schematics.json",
    "build:sass": "sass projects/dashboard-designer/styles/dashboard-designer-theme.scss projects/dashboard-designer/assets/dashboard-designer-theme.css",
    "build_lib_dashboard_designer": "npm run build:sass && ng build dashboard-designer --configuration production && npm run build:schematics",
    "npm_pack_dashboard_designer": "cd dist/dashboard-designer && npm pack",
    "package_dashboard_designer": "npm run build_lib_dashboard_designer && npm run npm_pack_dashboard_designer",
    "package:all": "npm run package_dashboard_designer",
    "run:all": "node node_modules/@angular-architects/module-federation/src/server/mf-dev-server.js",
    "publish-lib": "npm run build_lib_dashboard_designer && cd dist/dashboard-designer && npm publish --access public",
    "build:all": "npm run package:all && npm run build"
  },
  "description": "ngx dashboard designer",
  "dependencies": {
    "@angular-architects/module-federation": "^14.3.10",
    "@angular/animations": "14.0.0",
    "@angular/cdk": "^14.0.0",
    "@angular/common": "14.0.0",
    "@angular/compiler": "14.0.0",
    "@angular/core": "14.0.0",
    "@angular/forms": "14.0.0",
    "@angular/platform-browser": "14.0.0",
    "@angular/platform-browser-dynamic": "14.0.0",
    "@angular/router": "14.0.0",
    "bootstrap": "^5.2.0",
    "ngx-bootstrap": "^9.0.0",
    "rxjs": "7.5.5",
    "tslib": "2.4.0",
    "zone.js": "0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1402.3",
    "@angular-devkit/build-angular": "14.0.0",
    "@angular-devkit/schematics": "^14.2.3",
    "@angular-eslint/builder": "14.0.0-alpha.0",
    "@angular-eslint/eslint-plugin": "14.0.0-alpha.0",
    "@angular-eslint/eslint-plugin-template": "14.0.0-alpha.0",
    "@angular-eslint/schematics": "14.0.0-alpha.0",
    "@angular-eslint/template-parser": "14.0.0-alpha.0",
    "@angular/cli": "14.0.0",
    "@angular/compiler-cli": "14.0.0",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@types/jasmine": "4.0.3",
    "@types/node": "17.0.40",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "angular-cli-ghpages": "1.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "jasmine-core": "4.1.1",
    "karma": "6.3.20",
    "karma-chrome-launcher": "3.1.1",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.0.1",
    "karma-jasmine-html-reporter": "2.0.0",
    "lint-staged": "13.0.0",
    "ng-packagr": "14.0.0",
    "ngx-build-plus": "^14.0.0",
    "prettier": "2.6.2",
    "typescript": "4.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linoymalakkaran/ngx-dashboard-designer/tree/angular-v14"
  },
  "keywords": [
    "angular v14",
    "gridster2",
    "dashboard",
    "@angular-architects/module-federation"
  ],
  "author": "Linoy Pappachan Malakkaran",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{html,scss,js,ts,md}": [
      "prettier --write"
    ]
  }
}
